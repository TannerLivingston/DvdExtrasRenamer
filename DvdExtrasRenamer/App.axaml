<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DvdExtrasRenamer.App"
             xmlns:local="using:DvdExtrasRenamer"
             RequestedThemeVariant="Light">
             <!-- "Light" forces light theme to prevent system dark theme from overriding colors -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>